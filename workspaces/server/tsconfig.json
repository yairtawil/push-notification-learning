{
  "extends": "../../tsconfig.json",
  "ts-node": {  "files": true },
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "lib": [
      "es6",
      "es2016",
      "es2017",
      "es2019",
      "dom"
    ],
    "types": [
      "node"
    ],
    "outDir": "build",
    "sourceMap": false,
    "noEmit": false,
    "isolatedModules": false,
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noLib": false,
    "importHelpers": false,
    "downlevelIteration": true,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "charset": "utf8",
    "newLine": "LF",
    "pretty": true,
    "strictBindCallApply": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
